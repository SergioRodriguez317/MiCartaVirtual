<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pantalla_confirmacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergiorodriguez.micartavirtual.PantallaConfirmacion">

    <TextView
        android:text="Confirmación de su Reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="24sp" />

    <TextView
        android:text="Estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/estadoReserva"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nombre cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:id="@+id/nombreCliente"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:layout_below="@+id/estadoReserva"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Documento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/documentoCliente"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:layout_below="@+id/nombreCliente"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Teléfono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telefonoCliente"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Fecha de la reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/telefonoCliente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/fechaReserva"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp" />

    <TextView
        android:text="CantidadPersonas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horaReserva"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/cantidadPersonas"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp" />

    <TextView
        android:text="Hora de la reserva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/horaReserva"
        android:textSize="18sp"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/fechaReserva"
        android:layout_alignStart="@+id/nombreCliente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/botonSalir"
        android:text="SALIR"
        android:onClick="OnClickBotonSalir" />

    <Button
        android:text="Atrás"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonAtras"
        android:layout_alignBaseline="@+id/botonSalir"
        android:layout_alignBottom="@+id/botonSalir"
        android:layout_toEndOf="@+id/cantidadPersonas"
        android:onClick="OnClickBotonAtras"
        android:background="@android:color/holo_red_dark" />

    <TextView
        android:text="Nombre: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nombreCliente"
        android:layout_alignStart="@+id/textView26"
        android:id="@+id/textView27" />

    <TextView
        android:text="Telefono: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fechaReserva"
        android:layout_alignStart="@+id/textView28"
        android:id="@+id/textView29" />

    <TextView
        android:text="Fecha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fechaReserva"
        android:layout_alignStart="@+id/textView29"
        android:id="@+id/textView30" />

    <TextView
        android:text="Hora:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/horaReserva"
        android:layout_alignStart="@+id/textView30"
        android:id="@+id/textView31" />

    <TextView
        android:text="Cantidad Personas:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cantidadPersonas"
        android:layout_alignStart="@+id/textView31"
        android:id="@+id/textView37" />

    <TextView
        android:text="Documento:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:layout_alignBaseline="@+id/documentoCliente"
        android:layout_alignBottom="@+id/documentoCliente"
        android:layout_alignParentStart="true" />
</RelativeLayout>
